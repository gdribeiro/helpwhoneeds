<!DOCTYPE html>
<html>
    <head>
        <title>Helpwhoneeds</title>
        <%= csrf_meta_tags %>

        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">HelpWhoNeeds</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="menu-button">
                            <a href="/">Página Inicial</a>
                        </li>
                        <li class="menu-button">
                            <a href="/ranking">Maiores Doadores</a>
                        </li>
                        <li class="menu-button">
                            <a href="/projects">Projetos</a>
                        </li>
                        <li class="menu-button">
                            <a href="/charities">Instituições</a>
                        </li>
                        <li class="menu-button">
                            <a href="/search_projects/new">Pesquisar</a>
                        </li>
                    </ul>
                    <!-- Login Logout signin stuff -->
                    <p class="navbar-text pull-right">
                        <% if user_signed_in? %>
                        Logado como 
                        <strong><%= link_to current_user.name, user_path(current_user) %></strong>.
                        <%= link_to 'Editar Perfil', edit_user_registration_path, :class => 'navbar-link' %>
                        |
                        <%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                    <% else %>
                        <%= link_to "Cadastrar", new_user_registration_path, :class => 'navbar-link'  %>
                        |
                        <%= link_to "Entrar", new_user_session_path, :class => 'navbar-link'  %>
                        <% end %>
                    </p>
                </div>
            </div>
        </nav>

        <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
        <% end %>

        <!-- In the place of normal yield, to be able to use bootstrap -->
        <div class="container">
            <%= yield %>
        </div>

        <footer>
            <div class="container">
                Help Who Needs!
            </div>
        </footer>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.js"></script>

    </body>
</html>
