<h1><%= @charity.name %></h1>
<%= link_to "Doar", new_charity_donation_path(@charity) %>
<h2>Doações</h2>
<table>
  <thead>
    <tr>
      <th>  Doador </th>
      <th>  Valor Doado  </th>
      <th>  Data da Doação  </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @total = 0 %>
    <% @donations.each do |donation| %>
    <% @total = @total + donation.value %>
      <tr>
        <td><%=  User.find(donation.user_id).name %></td>
        <td><%= donation.value  %> R$</td>
        <td><%= donation.created_at.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
<strong>Valor total recebido: </strong>
<%= @total  %> R$
</p>


