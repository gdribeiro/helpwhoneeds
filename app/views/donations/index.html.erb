<p id="notice"><%= notice %></p>

<h1>Donations</h1>

<table>
  <thead>
    <tr>
      <th>  Description  </th>
      <th>  Value  </th>
      <th>  Created at  </th>
      <th>  User ID  </th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%= form_tag(donations_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Donations" %>
<%= submit_tag "Search"%>
<% end %>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.description %></td>
        <td><%= donation.value %></td>
        <td><%= donation.created_at %></td>
        <td><%= User.find(donation.user_id).name %></td>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path %>
