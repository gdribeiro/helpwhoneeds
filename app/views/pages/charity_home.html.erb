<h1>Seus Projetos </h1>
<table>
  <thead>
    <tr>
      <th>  Nome  </th>
      <th>  Valor Arrecadado  </th>
      <th>  Objetivo  </th>
      <th>  Data  </th>
    </tr>
  </thead>

  <tbody>
    <% @user_projects.each do |project| %>
      <tr>
        <td> <%= link_to(project.name, project_path(project)) %> </td>
        <td><%= project.current_amount %></td>
        <td><%= project.goal_amount %></td>
        <td><%= project.created_at.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to("Criar novo projeto", new_project_path) %>








<h1>Doações Recebidas</h1>

<table>
  <thead>
    <tr>
      <th>  Doador  </th>
      <th>  Valor  </th>
      <th>  Data  </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations_received.each do |donation| %>
      <% @user = User.find(donation.user_id) %>
      <tr>
        <td> <%= link_to @user.name, user_path(@user) %></td>
        <td><%= donation.value %></td>
        <td><%= donation.created_at.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
